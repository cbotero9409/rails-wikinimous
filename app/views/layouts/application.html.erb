    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light p-3">
      <%= link_to "RailsWikinimous", articles_path, class: 'class="navbar-brand"' %>
      <%= link_to '+ Add new article', new_article_path, class: 'class="navbar-brand"' %>
    </nav>
    <div class="container p-3">
      <div class="mx-auto" style="width: 700px;">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
