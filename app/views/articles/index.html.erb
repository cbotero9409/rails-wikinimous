<% @articles.each do |article| %>
  <div class="row">
    <div class="col-12">
      <article>
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= article.content[0..100] %>...</p>
        <% link_to "Delete", article_path(article),
          data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure?'
          }
        %>
      </article>
    </div>
  </div>
<% end %>
